PROGRAM Data Mahasiswa

DEKLARASI
    n : integer
    nama : array of string
    nilai : array of integer
    i : integer
    indeks : character

ALGORITMA
    // Input jumlah mahasiswa
    OUTPUT "Jumlah mahasiswa: "
    INPUT n
    
    // Input data mahasiswa
    FOR i ← 0 TO n-1 DO
        OUTPUT "Mahasiswa ", i+1
        OUTPUT "Nama: "
        INPUT nama[i]
        OUTPUT "Nilai: "
        INPUT nilai[i]
    ENDFOR
    
    // Output hasil
    OUTPUT "=== HASIL ==="
    FOR i ← 0 TO n-1 DO
        // Tentukan indeks
        IF nilai[i] ≥ 85 THEN
            indeks ← 'A'
        ELSE IF nilai[i] ≥ 70 THEN
            indeks ← 'B'
        ELSE IF nilai[i] ≥ 55 THEN
            indeks ← 'C'
        ELSE IF nilai[i] ≥ 40 THEN
            indeks ← 'D'
        ELSE
            indeks ← 'E'
        ENDIF
        
        // Tampilkan data
        OUTPUT i+1, ". ", nama[i], " - Nilai: ", nilai[i], " (Indeks ", indeks, ")"
    ENDFOR

END PROGRAM