//START
    DEKLARASI nama, jumlahJuri, totalNilai, nilai, rataRata
    totalNilai ← 0
    TAMPILKAN "Nama Mahasiswa: "
    INPUT nama
    TAMPILKAN "Jumlah Juri: "
    INPUT jumlahJuri
//UNTUK i = 1 SAMPAI jumlahJuri:
    TAMPILKAN "Nilai Juri", i, ": "
    INPUT nilai
    totalNilai ← totalNilai + nilai
//AKHIR UNTUK
    rataRata ← totalNilai / jumlahJuri
    TAMPILKAN "Mahasiswa: ", nama
    TAMPILKAN "Rata-rata: ", rataRata
//JIKA rataRata ≥ 75:
    TAMPILKAN "Status: LULUS"
//JIKA TIDAK:
    TAMPILKAN "Status: TIDAK LULUS"
//AKHIR JIKA
END