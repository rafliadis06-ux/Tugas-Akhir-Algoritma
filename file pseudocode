ALGORITMA Penilaian_Mahasiswa

DEKLARASI:
    namaMahasiswa : String
    jumlahJuri, i : Integer
    nilaiInput, totalNilai, rataRata : Real

DESKRIPSI:
    PRINT "Masukkan Nama Mahasiswa: "
    READ namaMahasiswa
    
    PRINT "Masukkan Jumlah Juri: "
    READ jumlahJuri
    
    // Inisialisasi total nilai
    totalNilai <- 0
    
    // Perulangan untuk mengambil nilai dari setiap juri
    FOR i FROM 1 TO jumlahJuri DO
        PRINT "Masukkan nilai dari juri ke-", i
        READ nilaiInput
        totalNilai <- totalNilai + nilaiInput
    ENDFOR
    
    // Menghitung rata-rata
    rataRata <- totalNilai / jumlahJuri
    
    // Menampilkan hasil
    PRINT "Nama Mahasiswa: ", namaMahasiswa
    PRINT "Rata-rata Nilai: ", rataRata
    
    // Menentukan kelulusan
    IF rataRata >= 75 THEN
        PRINT "Status: LULUS"
    ELSE
        PRINT "Status: TIDAK LULUS"
    ENDIF
END